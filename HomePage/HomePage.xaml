<Page x:Class="CsharpMiniProjects.HomePage.HomePage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:CsharpMiniProjects.UserControls"
        xmlns:utils="clr-namespace:CsharpMiniProjects.Utilities"
    Title="Mini Projects" Height="400" Width="500" Background="White">


    <Page.Resources>

        <!-- Slide Main Section in from left with ease-in -->
        <Storyboard x:Key="SlideMainInFromLeft">
            <DoubleAnimation Storyboard.TargetName="MainSectionTranslate"
                     Storyboard.TargetProperty="X"
                     From="-570" To="0" Duration="0:0:0.5">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseIn" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <!-- Slide Main Section in from right with ease-in -->
        <Storyboard x:Key="SlideMainInFromRight">
            <DoubleAnimation Storyboard.TargetName="MainSectionTranslate"
                     Storyboard.TargetProperty="X"
                     From="570" To="0" Duration="0:0:0.5">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseIn" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <!-- Slide Main Section out to the right with ease-out -->
        <Storyboard x:Key="SlideMainOutToRight">
            <DoubleAnimation Storyboard.TargetName="MainSectionTranslate"
                     Storyboard.TargetProperty="X"
                     From="0" To="570" Duration="0:0:0.5">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseOut" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <!-- Slide Main Section out to the left with ease-out -->
        <Storyboard x:Key="SlideMainOutToLeft">
            <DoubleAnimation Storyboard.TargetName="MainSectionTranslate"
                     Storyboard.TargetProperty="X"
                     From="0" To="-570" Duration="0:0:0.5">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseOut" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <!-- Slide Tools Section in from the left with ease-in -->
        <Storyboard x:Key="SlideToolsInFromLeft">
            <DoubleAnimation Storyboard.TargetName="ToolsSectionTranslate"
                     Storyboard.TargetProperty="X"
                     From="-570" To="-25" Duration="0:0:0.5">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseIn" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <!-- Slide Games Section in from the right with ease-in -->
        <Storyboard x:Key="SlideGamesInFromRight">
            <DoubleAnimation Storyboard.TargetName="GamesSectionTranslate"
                     Storyboard.TargetProperty="X"
                     From="570" To="25" Duration="0:0:0.5">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseIn" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <!-- Slide Tools Section out to the left with ease-out -->
        <Storyboard x:Key="SlideToolsOutToLeft">
            <DoubleAnimation Storyboard.TargetName="ToolsSectionTranslate"
                     Storyboard.TargetProperty="X"
                     From="-25" To="-570" Duration="0:0:0.5">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseOut" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>

        <!-- Slide Games Section out to the right with ease-out -->
        <Storyboard x:Key="SlideGamesOutToRight">
            <DoubleAnimation Storyboard.TargetName="GamesSectionTranslate"
                     Storyboard.TargetProperty="X"
                     From="25" To="570" Duration="0:0:0.5">
                <DoubleAnimation.EasingFunction>
                    <QuadraticEase EasingMode="EaseOut" />
                </DoubleAnimation.EasingFunction>
            </DoubleAnimation>
        </Storyboard>






        <!-- Style for ListBoxItem -->
        <Style TargetType="ListBoxItem" x:Key="CustomListBoxItemStyle">
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="VerticalAlignment" Value="Stretch"/>
            <Setter Property="Width" Value="200"/>
            <Setter Property="Height" Value="300"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="200">
                            <ContentPresenter />
                        </StackPanel>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Border BorderBrush="Black" BorderThickness="10" CornerRadius="15" Background="#A8E5DD" Margin="5,25" Padding="0" >
        <Viewbox Stretch="Uniform" Margin="0" >
            <Grid x:Name="MainGrid" ClipToBounds="True" Width="560">
                <!-- Main Section -->
                <Grid x:Name="MainSection" Visibility="Visible"  RenderTransformOrigin="0.5, 0.5">
                    <Grid.RenderTransform>
                        <TransformGroup>
                            <TranslateTransform x:Name="MainSectionTranslate" X="0"/>
                            <ScaleTransform ScaleX="1.1" ScaleY="1.1"/>
                        </TransformGroup>
                    </Grid.RenderTransform>
                    <!-- Main Section Content -->
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!-- Titles -->
                    <StackPanel Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <utils:OutlinedText Text=" MINI"
                                            FontFamily="{StaticResource ShrikhandFont}"
                                            FontSize="71"
                                            Stroke="Black"
                                            StrokeThickness="2"
                                            Fill="White"
                                            HorizontalAlignment="Center" Height="80" Width="223" Margin="10"/>
                        <utils:OutlinedText Text="PROJECTS"
                                            FontFamily="{StaticResource ShrikhandFont}"
                                            FontSize="35"
                                            Stroke="Black"
                                            StrokeThickness="2"
                                            Fill="White"
                                            HorizontalAlignment="Center"
                                            Margin="0,-20,0,0" Height="56" Width="215" />
                    </StackPanel>

                    <!-- Icons and Labels -->
                    <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,-80,0,0">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="10">
                            <Button Width="100" Height="100"  BorderThickness="0" Click="OnToolsButtonClick" >
                                <Image Source="/Ressources/AppsMenuIcon.png" Width="90" Height="100"/>
                            </Button>
                            <TextBlock Text="Tools" FontFamily="{StaticResource KavoonFont}" FontSize="16" HorizontalAlignment="Center" Margin="0,10,0,0" />
                        </StackPanel>
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="10">
                            <Button Width="100" Height="100"  BorderThickness="0" Click="OnGamesButtonClick">
                                <Image Source="/Ressources/GameIcon.png" Width="90" Height="100"/>
                            </Button>
                            <TextBlock Text="Games" FontFamily="{StaticResource KavoonFont}" FontSize="16" HorizontalAlignment="Center" Margin="0,10,0,0" />
                        </StackPanel>
                    </StackPanel>
                </Grid>

                <!-- Game Section -->
                <Grid x:Name="GamesSection" Visibility="Visible" HorizontalAlignment="Right" Width="550"  RenderTransformOrigin="0.5, 0.5">
                    <Grid.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleX="0.9" ScaleY="0.9"/>
                            <TranslateTransform x:Name="GamesSectionTranslate" X="700"/>
                        </TransformGroup>
                    </Grid.RenderTransform>
                    
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="0*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*" />
                        <ColumnDefinition Width="3*" />
                    </Grid.ColumnDefinitions>

                    <Button Content="← Back" FontSize="25" FontFamily="{StaticResource KavoonFont}" 
                            Width="121" Height="50" HorizontalAlignment="Left" VerticalAlignment="Top"
                            Click="OnGamesBackButtonClick"/>

                    <!-- Titles In Games Section -->
                    <StackPanel x:Name="TitlesInGamesSection" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <utils:OutlinedText Text="Games"
                                            FontFamily="{StaticResource ShrikhandFont}"
                                            FontSize="60"
                                            Stroke="Black"
                                            StrokeThickness="1"
                                            Fill="White"
                                            HorizontalAlignment="Center" Height="68" Width="226" />
                        <utils:OutlinedText Text=" PROJECTS"
                                            FontFamily="{StaticResource ShrikhandFont}"
                                            FontSize="38"
                                            Stroke="Black"
                                            StrokeThickness="1"
                                            Fill="White"
                                            Height="56" Width="226" Margin="-15,0,0,0"/>
                    </StackPanel>

                    <!-- Carousel with Up and Down Arrow Buttons -->
                    <StackPanel Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <!-- Up Arrow Button -->
                        <Button Width="40" Height="40" Click="UpButtonGames_Click"
HorizontalAlignment="Center" Margin="0,0,0,0" BorderThickness="0">
                            <Image Source="pack://application:,,,/Ressources/up.png" 
   Width="40" Height="40" Stretch="Uniform" />
                        </Button>

                        <!-- Carousel -->
                        <ListBox x:Name="GameCarouselListBox" ItemsSource="{Binding GameItems}" Background="#A8E5DD" Padding="0,25"
 Width="220" 
 Height="300" 
                 HorizontalAlignment="Center"
 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
 ScrollViewer.VerticalScrollBarVisibility="Disabled"
 ScrollViewer.CanContentScroll="True"
 SelectionMode="Single"
 BorderThickness="0"
 VerticalContentAlignment="Center"
 PreviewMouseWheel="CarouselListBox_MouseWheel" VerticalAlignment="Center">

                            <!-- Items -->
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <local:ListBoxItemControl Loaded="ListBoxItemControl_Loaded" ItemClicked="ListBoxItemControl_ItemClicked"/>
                                </DataTemplate>
                            </ListBox.ItemTemplate>

                        </ListBox>

                        <!-- Down Arrow Button -->
                        <Button Width="40" Height="40" Click="DownButtonGames_Click"
HorizontalAlignment="Center" Margin="0,0,0,0" BorderThickness="0">
                            <Image Source="pack://application:,,,/Ressources/down.png" 
   Width="40" Height="40" Stretch="Uniform" />
                        </Button>
                    </StackPanel>
                </Grid>



                <!-- Tool Section -->
                <Grid x:Name="ToolsSection" Visibility="Visible" HorizontalAlignment="Left" Width="550"  RenderTransformOrigin="0.5, 0.5">
                    <Grid.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleX="0.9" ScaleY="0.9"/>
                        <TranslateTransform x:Name="ToolsSectionTranslate" X="-700"/>
                        </TransformGroup>
                    </Grid.RenderTransform>

                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="0*" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*" />
                        <ColumnDefinition Width="2*" />
                    </Grid.ColumnDefinitions>

                    <!-- Return Button -->
                    <Button Content="Back →" FontSize="25" FontFamily="{StaticResource KavoonFont}" 
Width="121" Height="50" HorizontalAlignment="Right" VerticalAlignment="Top"
Click="OnToolsBackButtonClick" Grid.Column="1" Margin="0,0,0,0"/>

                    <!-- Titles In Tools Section -->
                    <StackPanel x:Name="TitlesInToolsSection" Grid.Row="0" Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <utils:OutlinedText Text="Tools"
                            FontFamily="{StaticResource ShrikhandFont}"
                            FontSize="70"
                            Stroke="Black"
                            StrokeThickness="1"
                            Fill="White"
                            HorizontalAlignment="Center" Height="75" Width="226" />
                        <utils:OutlinedText Text="PROJECTS"
                            FontFamily="{StaticResource ShrikhandFont}"
                            FontSize="36"
                            Stroke="Black"
                            StrokeThickness="1"
                            Fill="White"
                            Height="56" Width="214" 
                                            HorizontalAlignment="Center"/>
                    </StackPanel>

                    <!-- Carousel with Up and Down Arrow Buttons -->
                    <StackPanel Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center">
                        <!-- Up Arrow Button -->
                        <Button Width="40" Height="40" Click="UpButtonTools_Click"
                HorizontalAlignment="Center" Margin="0,0,0,10" BorderThickness="0">
                            <Image Source="pack://application:,,,/Ressources/up.png" 
                   Width="40" Height="40" Stretch="Uniform" />
                        </Button>

                        <!-- Carousel -->
                        <ListBox x:Name="ToolCarouselListBox" ItemsSource="{Binding ToolItems}" Background="#A8E5DD"
                 Width="220" 
                 Height="300" 
                                 HorizontalAlignment="Center"
                 ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                 ScrollViewer.VerticalScrollBarVisibility="Disabled"
                 ScrollViewer.CanContentScroll="True"
                 SelectionMode="Single"
                 BorderThickness="0"
                 VerticalContentAlignment="Center"
                 PreviewMouseWheel="CarouselListBox_MouseWheel" VerticalAlignment="Center">

                            <!-- Items -->
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <local:ListBoxItemControl Loaded="ListBoxItemControl_Loaded" ItemClicked="ListBoxItemControl_ItemClicked"/>
                                </DataTemplate>
                            </ListBox.ItemTemplate>

                        </ListBox>

                        <!-- Down Arrow Button -->
                        <Button Width="40" Height="40" Click="DownButtonTools_Click"
                HorizontalAlignment="Center" Margin="0,0,0,0" BorderThickness="0">
                            <Image Source="pack://application:,,,/Ressources/down.png" 
                   Width="40" Height="40" Stretch="Uniform" />
                        </Button>
                    </StackPanel>
                </Grid>

    <!-- Popups -->
                <!--General Popup -->
                <Popup x:Name="popupInfo"
               AllowsTransparency="True"
               StaysOpen="True" Width="250" MinHeight="200" VerticalOffset = "-50">
                    <Border Background="White"
                    BorderBrush="Black"
                    BorderThickness="1"
                    Padding="10"
                    CornerRadius="5">
                        <StackPanel Orientation="Vertical">
                            <StackPanel Orientation="Horizontal">
                                <Image x:Name="popupIconImage"  Width="40" Height="40" Margin="0,0,10,0"></Image>
                            <!-- Popup Title -->
                            <TextBlock x:Name="popupTitleTextBlock"
                               FontSize="20"
                               FontWeight="Bold"
                                       MaxWidth="180"
                               TextWrapping="Wrap"/>
                            </StackPanel>
                            
                            <!-- Popup Description with Inline Styling -->
                            <TextBlock x:Name="popupDescriptionTextBlock"
                               TextWrapping="Wrap"/>
                            <StackPanel Orientation="Horizontal" >
                                <Image Source="pack://application:,,,/Ressources/Images/CsharpIcon.png"  Width="40" Height="40" Margin="0,0,10,0"></Image>
                                <Image Source="pack://application:,,,/Ressources/Images/XamlIcon.png"  Width="40" Height="40"></Image>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Popup>
            </Grid>
        </Viewbox>

    </Border>
</Page>
